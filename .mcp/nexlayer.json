{
  "name": "nexlayer",
  "type": "rest",
  "description": "Deploy and manage NexLayer services",
  "base_url": "https://api.nexlayer.io",
  "endpoints": {
    "deploy": {
      "method": "POST",
      "path": "/deploy",
      "description": "Trigger a new deployment for the service",
      "query": {
        "service": "pulse-point-plaza"
      }
    },
    "status": {
      "method": "GET",
      "path": "/status",
      "description": "Get latest deployment status",
      "query": {
        "service": "pulse-point-plaza"
      }
    },
    "logs": {
      "method": "GET",
      "path": "/logs",
      "description": "Fetch deployment logs",
      "query": {
        "service": "pulse-point-plaza"
      }
    }
  }
}

